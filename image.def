Bootstrap: docker
From: mambaorg/micromamba:alpine


%environment
    micromamba install -y -f environment.yml
    micromamba activate myenv

%post
    wget -qO- https://quarto.org/download/latest/quarto-linux-amd64.tar.gz | tar -xvz -C $HOME
    ls $HOME/ quarto-1.4.555/
    
    $HOME/quarto-1.4.555/ install tinytex

    $HOME/quarto-1.4.555/ add --no-prompt computorg/computo-quarto-extension

%runscript
    $HOME/quarto-1.4.555/ publish index.qmd
