Bootstrap: docker
From: alpine:latest

%labels
    AUTHOR Quentin Festor
    VERSION 1.0
    DESCRIPTION "test de cr√©ation de sif pour computo"

%post
    apk add wget tar bzip2 bash curl
    ls -la
    wget -O sbin/environment.yml https://raw.githubusercontent.com/Qufst/create_apptainer.sif/main/environment.yml
    wget -O sbin/install.sh https://raw.githubusercontent.com/Qufst/create_apptainer.sif/main/install.sh
    sudo chmod -R ugo+rwx sbin/install.sh
    bash sbin/install.sh
    ls -la sbin/
    sbin/micromamba shell hook --shell
    sbin/micromamba create -y -n myenv -f sbin/environment.yml

%environment
    sbin/micromamba activate myenv

%help
    Utilisation : apptainer run image.sif --option
