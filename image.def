Bootstrap: docker
From: alpine:latest

%labels
    AUTHOR Quentin Festor
    VERSION 1.0
    DESCRIPTION "test de cr√©ation de sif pour computo"

%post
    apk add wget tar bzip2 bash curl
    wget -O environment.yml https://raw.githubusercontent.com/Qufst/create_apptainer.sif/main/environment.yml
    wget -qO-  https://micromamba.snakepit.net/api/micromamba/linux-64/latest | tar -xvj -C /usr/local/bin bin/micromamba
    touch /root/.bashrc
    /usr/local/bin/micromamba shell init -s bash -p /opt/conda
    rm -rf /var/cache/apk/
    source /root/.bashrc
    /usr/local/bin/micromamba create -y -n myenv -f environment.yml


%environment
    source /opt/conda/etc/profile.d/mamba.sh
    micromamba activate myenv
%help
    Utilisation : apptainer run image.sif --option
